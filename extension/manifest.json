{
  "manifest_version": 3,
  "name": "Ozon Price Tracker",
  "description": "Отслеживание цен на товары Ozon с напоминаниями о скидках.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://www.ozon.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ozon.ru/*"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Отслеживание цен Ozon",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
